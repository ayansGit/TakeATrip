<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.TransportActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSelectLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/grey2"
                android:text="Select Location"/>

            <Spinner
                android:id="@+id/locationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvSelectLocation"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:spinnerMode="dropdown"/>

            <View
                android:id="@+id/margin1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintStart_toStartOf="@id/locationSpinner"
                app:layout_constraintEnd_toEndOf="@id/locationSpinner"
                app:layout_constraintTop_toBottomOf="@id/locationSpinner"
                style="@style/ListMargin"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/tvSelectDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/margin1"
                android:layout_margin="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/grey2"
                android:text="Select Day"/>

            <Spinner
                android:id="@+id/daySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvSelectDay"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:spinnerMode="dropdown"/>

            <View
                android:id="@+id/margin2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintStart_toStartOf="@id/locationSpinner"
                app:layout_constraintEnd_toEndOf="@id/locationSpinner"
                app:layout_constraintTop_toBottomOf="@id/daySpinner"
                style="@style/ListMargin"
                android:layout_marginTop="@dimen/_5sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/margin2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                app:cardElevation="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DefaultTextStyle"
                        android:textStyle="bold"
                        android:text="Travel Plan:"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DefaultTextStyle"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/lorem_ipsum"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/DefaultTextStyle"
                            android:textStyle="bold"
                            android:text="Travel Cost:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/DefaultTextStyle"
                            android:textSize="@dimen/_15ssp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="₹3000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/DefaultTextStyle"
                            android:textStyle="bold"
                            android:text="Miscellaneous"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/DefaultTextStyle"
                            android:textSize="@dimen/_15ssp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="₹600"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_15sdp"
        app:maxImageSize="@dimen/_20sdp"
        app:srcCompat="@drawable/ic_add"
        style="@style/FabIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>
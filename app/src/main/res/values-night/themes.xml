<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TakeATrip" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BackIcon" parent="Theme.TakeATrip">
        <item name="android:src">@drawable/ic_back_dark</item>
    </style>

    <style name="ShareIcon" parent="Theme.TakeATrip">
        <item name="android:src">@drawable/ic_share</item>
        <item name="tint">@color/accent</item>
    </style>

    <style name="HeaderTitle" parent="Theme.TakeATrip">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_tab_selector_dark</item>
        <item name="itemTextColor">@drawable/bottom_tab_selector_dark</item>
    </style>

    <style name="ListIconImage" parent="Theme.TakeATrip">
        <item name="tint">@color/accent</item>
        <item name="android:background">@drawable/list_icon_bg_dark</item>
    </style>

    <style name="DefaultTextStyle" parent="Theme.TakeATrip">
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="ListMargin" parent="Theme.TakeATrip">
        <item name="android:background">@color/grey3</item>
    </style>

    <style name="FabIcon" parent="Theme.TakeATrip">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="CheckBox" parent="Theme.TakeATrip">
        <item name="android:buttonTint">@color/accent</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Image" parent="Theme.TakeATrip">
        <item name="tint">@color/grey3</item>
    </style>
</resources>